{
    "start_url": "https://www.amazon.com.mx",
    "actions": [
        {
            "action": "input",
            "by": "ID",
            "value": "twotabsearchtextbox",
            "input_value": "samsung"
        },
        {
            "action": "wait",
            "wait": 2
        },
                {
            "action": "scroll"
        },
        {
            "action": "find_elements",
            "by": "CSS_SELECTOR",
            "value": "div.a-section.a-spacing-base",
            "actions": [
                {
                    "action": "get_element_text",
                    "by": "CSS_SELECTOR",
                    "value": "span.a-size-base-plus.a-color-base.a-text-normal",
                    "save_as": "title"
                },
                {
                    "action": "get_element_text",
                    "by": "CSS_SELECTOR",
                    "value": "span.a-price-whole",
                    "save_as": "price_whole"
                },
                {
                    "action": "get_element_text",
                    "by": "CSS_SELECTOR",
                    "value": "span.a-price-fraction",
                    "save_as": "price_fraction"
                },
                {
                    "action": "store_data",
                    "data": {
                        "Producto": "{title}",
                        "Precio": "{price_whole}"
                    }
                }
            ]
        }
    ],
    "output": {
        "filename": "productos_amazon.xlsx",
        "columns": ["Producto", "Precio"]
    }
}
